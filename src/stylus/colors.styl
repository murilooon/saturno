default = rgb(116, 0, 184)
primary = rgb(105, 48, 195)
secondary = rgb(94, 96, 206)
danger = rgb(86, 207, 225)
success = rgb(128, 255, 219)

rose = rgb(218, 20, 96)
black-bis = hsl(0, 0%, 7%)
muted = #e9e9e9

// texts
.uk-text-danger-bis
  color: danger !important;

// colors borders
.uk-circle.uk-background-danger {
  border: rgb(223, 97, 75) 4px solid !important;
}
.uk-circle.uk-background-primary {
  border: rgb(21, 126, 247) 4px solid;
}
.uk-circle.uk-background-success {
  border: rgb(63, 219, 206) 4px solid;
}
.uk-circle.uk-background-rose {
  border: rgb(218, 20, 96) 4px solid;
}

#next_courses .uk-card-header.uk-border-danger {
  border-left: tomato 4px solid !important;
}
#next_courses .uk-card-header.uk-border-primary {
  border-left: rgb(21, 126, 247) 4px solid !important;
}
#next_courses .uk-card-header.uk-border-success {
  border-left: rgb(63, 219, 206) 4px solid !important;
}
#next_courses .uk-card-header.uk-border-rose {
  border-left: rgb(218, 20, 96) 4px solid !important;
}

.uk-blackground-black-bis
  background-color: black-bis;

.uk-label-muted
    background-color: muted
    color: #888282

// buttons
.uk-button-primary
  background-color: primary
  &:hover
    background-color: rgb(105, 56, 195)

.uk-button-secondary
  background-color: secondary
  &:hover
    background-color: rgb(94, 100, 206)