@import url("https://fonts.googleapis.com/css2?family=Baloo+Thambi+2:wght@400;500&display=swap");

* {
  font-family: "Baloo Thambi 2", cursive !important;
}

.site {
  display: flex;
  min-height: 100vh;
  flex-direction: column;
}

.site-container {
  flex: 1;
}

// navigation
.uk-navbar-nav .uk-active
  border-bottom: 5px solid danger;
  border-radius: 5px;

// cards
.uk-card
  transition: transform 500ms;

.uk-card:hover
  transform: scale(1.1, 1.1);

.uk-card-title {
  font-size: 20px !important;
}

.uk-card.uk-border-rounded {
  border-radius: 15px;
}

.progress-text
    font-size: 1rem

.uk-circle
  background-color: transparent;
  width: 40px;
  height: 38px;
  margin-bottom: 25px;
  border-radius: 50%;


#previous_events .uk-card-header {
  border-top-left-radius: 15px;
  border-bottom: none;
  margin-bottom: 30px;
}

#next_event > div > a > div {
  height: 100px !important;
}

@media (max-width: 959px) {
  .users {
    margin-top: 3rem !important;
  }
  #next_event .uk-card-title {
    height: 210px;
  }
}

@media (min-width:960px)
  #next_event .uk-card-title
    height: 190px;

.users span.more {
  font-size: 16px;
  padding: 0px;
}

// 
.scroll
  overflow: scroll !important;
  height: 730px

// search-bar
.searchsize
    &:hover
      transform: scale(1.1, 1.2)

.searchsize
  transition: transform .5s ease-out !important


.uk-button-watch
  height: 150px

// no effects
.uk-card.no-scale {
  transform: none !important;
  transition: none !important;
}
